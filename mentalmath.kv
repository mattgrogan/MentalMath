#:kivy 1.0.9

<MentalMathLayout>:
    answer: answer_text
    answer_value: ""

    orientation: "vertical"

    Label:
        text: "Hello World!"
        size_hint_y: .10

    GridLayout:
        cols: 2
        size_hint_y: .35
        Label:
            text: "a"
        Label:
            text: "b"
        Label:
            text: "c"
        Label:
            text: "d"

    GridLayout:
        cols: 3
        size_hint_y: .35
        
        Button:
            text: "1"
            on_press: root.on_press(1)
        Button:
            text: "2"
            on_press: root.on_press(2)
        Button:
            text: "3"
            on_press: root.on_press(3)
        Button:
            text: "4"
            on_press: root.on_press(4)
        Button:
            text: "5"
            on_press: root.on_press(5)
        Button:
            text: "6"
            on_press: root.on_press(6)
        Button:
            text: "7"
            on_press: root.on_press(7)
        Button:
            text: "8"
            on_press: root.on_press(8)
        Button:
            text: "9"
            on_press: root.on_press(9)

    Label:
        id: answer_text
        size_hint_y: .10
        text: root.answer_value

    Button:
        size_hint_y: .10
        text: "Clear"
        on_press: root.clear()